# =============================================================================
# Claude Code 自動ISSUE作成 - 設定ファイル
# =============================================================================

# プロジェクト設定
export PROJECT_PATH="/path/to/your/project"
export PROJECT_NAME="MyProject"

# ISSUE作成設定
export MAX_ISSUES=5
export DRY_RUN=false

# ログ設定
export LOG_FILE="/var/log/claude_issue_batch.log"
export DEBUG_MODE=false

# GitHub設定
export GITHUB_OWNER="your-username"
export GITHUB_REPO="your-repository"

# Claude Code設定
export CLAUDE_MODEL="claude-sonnet-4"  # 使用するモデル（オプション）

# フィルタリング設定
export ISSUE_TYPES="bug,feature,improvement,documentation"
export EXCLUDED_LABELS="wontfix,duplicate"
export MIN_PRIORITY="medium"  # low, medium, high

# 通知設定（オプション）
export SLACK_WEBHOOK_URL=""  # Slack通知用（空の場合は無効）
export EMAIL_RECIPIENTS=""   # メール通知用（空の場合は無効）

# 高度な設定
export CLAUDE_TIMEOUT=300    # Claude CLI のタイムアウト（秒）
export RATE_LIMIT_DELAY=5    # API呼び出し間の遅延（秒）
export BACKUP_COUNT=7        # ログファイルのバックアップ数

# プロジェクト固有のプロンプトカスタマイズ
export CUSTOM_PROMPT_PREFIX="このプロジェクトは${PROJECT_NAME}です。"
export FOCUS_AREAS="security,performance,maintainability"

# =============================================================================
# 使用例
# =============================================================================

# このファイルを読み込んでスクリプトを実行:
# source /path/to/config.env && ./auto_issue_batch.sh

# または環境変数として設定:
# export $(grep -v '^#' /path/to/config.env | xargs) && ./auto_issue_batch.sh